{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aastar.io/schemas/erc8004-validation-response.schema.json",
  "title": "ERC-8004 Validation Response",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "requestHash",
    "validatorAddress",
    "agentId",
    "tag",
    "response",
    "responseUri",
    "createdAt"
  ],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "requestHash": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" },
    "validatorAddress": { "type": "string", "pattern": "^0x[0-9a-fA-F]{40}$" },
    "agentId": { "type": "string", "minLength": 1 },
    "tag": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" },
    "response": { "type": "integer", "minimum": 0, "maximum": 100 },
    "responseUri": { "type": "string", "minLength": 1 },
    "createdAt": { "type": "string", "format": "date-time" },
    "chainId": { "type": "string", "minLength": 1 },
    "taskEscrow": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "address": { "type": "string", "pattern": "^0x[0-9a-fA-F]{40}$" },
        "taskId": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" }
      }
    },
    "receipts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["receiptId", "receiptUri"],
        "properties": {
          "receiptId": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" },
          "receiptUri": { "type": "string", "minLength": 1 }
        }
      }
    },
    "details": { "type": "object" }
  }
}
