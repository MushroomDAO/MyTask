{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aastar.io/schemas/erc8004-validation-request.schema.json",
  "title": "ERC-8004 Validation Request",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "agentId", "requestUri", "requestHash", "createdAt"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "agentId": { "type": "string", "minLength": 1 },
    "requestUri": { "type": "string", "minLength": 1 },
    "requestHash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "chainId": { "type": "string", "minLength": 1 },
    "taskEscrow": {
      "type": "object",
      "additionalProperties": false,
      "required": ["address"],
      "properties": {
        "address": { "type": "string", "pattern": "^0x[0-9a-fA-F]{40}$" },
        "taskId": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" }
      }
    },
    "juryContract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["address"],
      "properties": {
        "address": { "type": "string", "pattern": "^0x[0-9a-fA-F]{40}$" }
      }
    },
    "requestedTags": {
      "type": "array",
      "items": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" }
    },
    "subject": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": { "type": "string", "enum": ["task", "evidence", "receipt", "offchain-action"] },
        "uri": { "type": "string" },
        "hash": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" }
      }
    },
    "receipts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["receiptId", "receiptUri"],
        "properties": {
          "receiptId": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" },
          "receiptUri": { "type": "string", "minLength": 1 }
        }
      }
    },
    "context": { "type": "object" }
  }
}
